<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <TextView
        android:id="@+id/grid_tv_o_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이름이에요"
        android:textColor="@color/gray"
        app:layout_constraintTop_toBottomOf="@id/grid_tv_p_name"
        app:layout_constraintEnd_toEndOf="@id/grid_iv_item"
        app:layout_constraintStart_toStartOf="@id/grid_iv_item"/>

    <TextView
        android:id="@+id/grid_tv_p_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="뭘까요..."
        android:textStyle="bold"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/grid_iv_item"
        app:layout_constraintStart_toStartOf="@id/grid_iv_item"
        app:layout_constraintEnd_toEndOf="@id/grid_iv_item"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/grid_iv_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="50dp"
        android:paddingEnd="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/black">

    <ImageView
        android:id="@+id/grid_iv_item_in"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_addnum"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    </androidx.cardview.widget.CardView>





</androidx.constraintlayout.widget.ConstraintLayout>