<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/shp_dialog_age"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <NumberPicker
        android:id="@+id/number_picker_age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_number_picker_close"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/shp_button_left_bottom_radius"
        android:text="@string/btn_label_close"
        app:layout_constraintEnd_toStartOf="@id/btn_number_picker_confirm"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/number_picker_age" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_number_picker_confirm"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/shp_button_right_bottom_radius"
        android:text="@string/btn_label_confirm"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/btn_number_picker_close"
        app:layout_constraintTop_toTopOf="@id/btn_number_picker_close" />

</androidx.constraintlayout.widget.ConstraintLayout>